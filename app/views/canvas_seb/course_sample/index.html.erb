<div id="canvas_seb_sample_page" style="padding: 20px;">
  <h1><%= t(:hello_user_title, "Hello %{user}, welcome to %{course}!", user: @username, course: @coursename) %></h1>
  <p><%= t(:congratulations, "You are viewing a sample page added by the Canvas SEB plugin.") %></p>
  <hr />
  <p>
    <%= t(:permission_info, "This page is only visible because you have the <strong>View Canvas SEB Config Page</strong> permission.") %>
  </p>
  <hr />
  <h3><%= t(:course_settings_title, "Course Specific Settings") %></h3>
  <%= form_with url: course_canvas_seb_save_settings_path(id: @context.id), method: :post, local: true do |f| %>
    <div style="margin-bottom: 15px;">
      <label for="seb_config_key_mac" style="display: block; margin-bottom: 5px;">
        <%= t(:seb_config_key_mac_label, "SEB Config key (MAC):") %>
      </label>
      <input type="text" name="seb_config_key_mac" id="seb_config_key_mac" value="<%= @mac_key %>" style="width: 400px;" placeholder="e.g. SECURE-KEY-MAC" />
    </div>

    <div style="margin-bottom: 15px;">
      <label for="seb_config_key_window" style="display: block; margin-bottom: 5px;">
        <%= t(:seb_config_key_window_label, "SEB Config key (Windows):") %>
      </label>
      <input type="text" name="seb_config_key_window" id="seb_config_key_window" value="<%= @win_key %>" style="width: 400px;" placeholder="e.g. SECURE-KEY-WINDOW" />
    </div>

    <button type="submit" class="btn btn-primary">
      <%= t(:save_keys_button, "Save SEB Config keys") %>
    </button>
  <% end %>
</div>
